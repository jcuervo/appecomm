= form_for @article do |f|
  -if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :fb_publish
    = f.check_box :fb_publish
  .field
    = f.label :twitter_publish
    = f.check_box :twitter_publish
  .field
    = f.label :meta_keywords
    = f.text_field :meta_keywords
  .field
    = f.label :meta_description
    = f.text_field :meta_description
  .actions
    = f.submit 'Save'
