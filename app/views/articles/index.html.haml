%h1 Listing articles

%table
  %tr
    %th Title
    %th Content
    %th Fb publish
    %th Twitter publish
    %th Meta keywords
    %th Meta description
    %th
    %th
    %th

  - @articles.each do |article|
    %tr
      %td= article.title
      %td= article.content
      %td= article.fb_publish
      %td= article.twitter_publish
      %td= article.meta_keywords
      %td= article.meta_description
      %td= link_to 'Show', article
      %td= link_to 'Edit', edit_article_path(article)
      %td= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Article', new_article_path
